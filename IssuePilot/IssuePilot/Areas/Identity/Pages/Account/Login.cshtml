@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IssuePilot</title>
    <link href="~/img/Logo.svg" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-select.min.css" />
</head>
<body style="overflow-y:auto; background-color: #e9eeef">
    <main role="main">

        <div class="row no-gutters">
            <div class="col-md-6 bg-login-image leftside">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="col-lg-10 col-xl-7 mx-auto">
                        <section>
                            <h2 class="text-white d-flex justify-content-center mb-4" style="font-family: Montserrat-Regular">Anmelden als <br />Demo-Nutzer</h2>
                            @* Login Admin *@
                            <form method="post">
                                <div class="form-group">
                                    <input type="hidden" asp-for="Input.UserName" class="form-control" value="Demo-Admin" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="Input.Password" class="form-control" value="password" />
                                </div>

                                <div class="form-group mb-4 d-flex justify-content-center">
                                    <button type="submit" class="btn btn-outline-light rounded-pill thick-border">Admin</button>
                                </div>
                            </form>

                            @* Login Manager *@
                            <form method="post">
                                <div class="form-group">
                                    <input type="hidden" asp-for="Input.UserName" class="form-control" value="Demo-Manager" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="Input.Password" class="form-control" value="password" />
                                </div>

                                <div class="form-group mb-4 d-flex justify-content-center">
                                    <button type="submit" class="btn btn-outline-light rounded-pill thick-border">Manager</button>
                                </div>
                            </form>

                            @* Login User *@
                            <form method="post">
                                <div class="form-group">
                                    <input type="hidden" asp-for="Input.UserName" class="form-control" value="Demo-Benutzer" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="Input.Password" class="form-control" value="password" />
                                </div>

                                <div class="form-group mb-4 d-flex justify-content-center">
                                    <button type="submit" class="btn btn-outline-light rounded-pill thick-border">Benutzer</button>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
            <div class="col-md-6 bg-login rightside">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-10 col-xl-7 mx-auto">
                                <section>
                                    <img title="Issue Pilot Logo" src="~/img/Logo-gross.svg" />
                                    <form id="account" method="post">
                                        <div asp-validation-summary="All" class="text-danger text-wrap text-break"></div>
                                        <div class="form-group mb-4">
                                            <input asp-for="Input.UserName" class="form-control rounded-pill shadow-sm px-4" placeholder="Nutzername" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Input.Password" class="form-control rounded-pill shadow-sm px-4" placeholder="Passwort" />
                                        </div>
                                        <div class="mb-4 d-flex justify-content-center">
                                            <button type="submit" class="text-nowrap btn btn-slide btn-slide-blue btn-blue" style="width:auto">Anmelden</button>
                                        </div>
                                    </form>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-select.min.js"></script>

</body>
</html>