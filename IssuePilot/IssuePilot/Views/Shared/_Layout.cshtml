                                <rect id="navbar-icon-fill" y="8" width="9" height="12" rx="2" fill="white" />
                                <rect id="navbar-icon-fill" x="11" y="13" width="9" height="7" rx="2" fill="white" />
                            </svg>
                        </a>
                    </li>
                    <li class="mt-1">
                        <a data-toggle="tooltip" data-placement="bottom" title="Projekte" data-delay='{"show":"500"}' class="@(ViewBag.Tab == "2" ? "btn-gradient" : "btn-slide btn-slide-gradient") btn navbar-item" asp-controller="Project" asp-action="Index">
