@model IssuePilot.Models.DBModels.Project

@{
    ViewData["Title"] = "Projekt löschen";
    ViewBag.Tab = "2";
}
<h4 class="text-nowrap">
    <a class="back-link btn-slide rounded-pill pr-2 py-1" asp-action="Other" asp-route-id="@Model.Id">
        <span class="icon-wrapper-clickable">
            <svg class="back-icon" width="15" height="25" viewBox="0 0 15 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 24L3.83456 15.018C2.79432 13.8738 2.79432 12.1262 3.83456 10.982L12 2" stroke-width="4" />
            </svg>
        </span> <span class="back-icon has-icon button-text">Weiteres</span>
    </a>
</h4>
<h2 class="mt-4">Projekt löschen</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8">
        <div class="card border-0 shadow-card bg-danger">
            <div class="card-body shadow-card text-white">
                <div class="card-title">Warnung!</div>
                <p>Sind Sie sicher, dass Sie das Projekt „@Html.DisplayFor(model => model.Title)“  endgültig löschen wollen? Alle Tickets werden dadurch auch gelöscht.</p>
            </div>
            <div class="card-footer bg-white">
                <form asp-action="Delete" class="text-right">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Löschen" class="btn btn-danger" />
                </form>
            </div>
        </div>
        
        
    </div>
</div>
